<UserControl x:Class="AttendenceSystem.Pages.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <mui:ModernTab Layout="List" SelectedSource="/Pages/EmpRegister.xaml">
            <mui:ModernTab.Links>
                <mui:Link DisplayName="Add Employee" Source="/Pages/EmpRegister.xaml" />
                <mui:Link DisplayName="List Employee" Source="/Pages/EmpList.xaml" />
                <mui:Link DisplayName="Create Card" Source="/Pages/CreateCard.xaml" />
                <!--<mui:Link DisplayName="Attendence Record" Source="/Pages/AttendenceRecord.xaml" PropertyChanged="Link_PropertyChanged"/>-->
                <mui:Link DisplayName="Attendence Record" Source="/Pages/AttendenceRecord2.xaml"/>
            </mui:ModernTab.Links>
        </mui:ModernTab>
    </Grid>
</UserControl>
